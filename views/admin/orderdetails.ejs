<%- include("../partials/admin_header")%>
    <div class="container-scroller">
      <!-- partial:../../partials/_sidebar.html -->
      <%- include('../partials/admin_sidebar')%>
      </nav>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:../../partials/_navbar.html -->
        <%- include('../partials/admin_navbar')%>
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <h5>Delivery Details</h5> 
            <div class="page-header">

            <div class="col-md-6" style="background-color: rgb(42, 42, 57);" >
              <h6 style="color: rgb(255, 254, 254);" class="pt-3">OrderId:    <%=orderData._id%></h6>
            
              <h6 style="color: rgb(255, 255, 255);">Address:    <%=orderData.deliveryDetails%></h6>
              <h6 style="color: rgb(255, 255, 255);">Payment Method:    <%=orderData.paymentMethode%></h6>
              <h6 style="color: rgb(255, 252, 252);">Status:  <span class="text-success font-weight-bold"><%=orderData.status%> </span>  <button type="button" class="btn btn-danger font-weight-bold float-right" data-toggle="modal" data-target="#exampleModalCenter">
                Edit
              </button></h6>
              <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLongTitle">Status update</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <form action="/admin/updatestatus/" method="post">
                        <div class="form-group">
                          <input type="hidden" value="<%=orderData._id%>" name="id">
                          <label for="exampleSelectGender">Status</label>
                          <select class="form-control" id="status" name="status" required >
                                 <%if(orderData.status=="pending"){%>
                                  <option disabled><%=orderData.status%></option>
                                  <option >placed</option>
                                  <option>shipping</option>
                                  <option>Nearest hub</option>
                                  <option>Delivered</option>

                                 <%}else if(orderData.status=="placed"){%>
                                  <option disabled><%=orderData.status%></option>
                                  <option>shipping</option>
                                  <option>Nearest hub</option>
                                  <option>Delivered</option>


                                <% }else if(orderData.status=="shipping"){%>
                                  <option disabled><%=orderData.status%></option>
                                  <option>Nearest hub</option>
                                  <option>Delivered</option>

                                  
                                 


                                 <%}else{%>
                                  <option disabled><%=orderData.status%></option>
                                  
                                  <option>Delivered</option>

                                <% }%>
                          </select>
                        </div>
                       
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                      
                      </div>

                      </form>
                      
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-6" style="background-color: rgb(42, 42, 57);">
              
            </div>

              
              
            </div>
            <div class="row">
              
              
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  
                  <div class="card-body">
                    <h3 class="page-title" >Product details</h3>
                    
                    
                   
                    <div class="table-responsive" >
                      <table class="table table-striped" id="">
                        <thead>
                          <tr>
                            <th>No</th>
                            <th> Name</th>
                            <th>Image</th>
                            <th>Quantity</th>
                            
                            <th>Price</th>
                           
                          </tr>
                        </thead>
                        <tbody>
                          <% let count=1%>
                          <%orderData.product.forEach((order)=>{%>
                          

                          <tr >
                            <td><%=count%></td>
                            <td><%=order.productId.productName%></td>
                            <td><img src="/product-image/<%=order.productId.image[0]%>" style="height: 90px;width: 80px; border-radius: 0;" alt=""></td>
                            <td><%=order.quantity%></td>
                           
                         
                           <td><%=orderData.totalamount%></td>
                          
                           
                          </tr>
                          <%count++%>
                          <%})%>
                          
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
              
              
              
            </div>
          </div>
          
        </div>
  
      </div>
      
    </div>
  
    <%- include('../partials/admin_footer')%>