<%- include("../partials/admin_header")%>


<div class="container-scroller">
  <!-- partial:../../partials/_sidebar.html -->
  <%- include('../partials/admin_sidebar')%>

  <!-- partial -->
  <div class="container-fluid page-body-wrapper">
    <!-- partial:../../partials/_navbar.html -->
    <%- include('../partials/admin_navbar')%>
    <!-- partial -->
    <div class="main-panel">
      <div class="content-wrapper">
        <div class="page-header">
          <h3 class="page-title">Users</h3>
        </div>
        <div class="row">
          <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <div class="table-responsive">
                  
                  <%if(products.length>0){%>
                    
                
                  <table class="table table-striped" id="table-setting">
                    <thead>
                      <tr>
                        <th>No</th>
                        <th>Name</th>
                        <th>Image</th>
                        <!-- <th>Discription</th> --> 
                        <th>Category</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>status</th>
                        
                        <th>Options</th>
                        <th>Remove</th>
                      </tr>
                    </thead>
                    <tbody>
                      
                      <% let count=1%> 
                      <% products.forEach((product)=>{ %>

                      <tr>
                        <td><%=count%></td>
                        <td><%= product.productName%></td>
                        <td>
                          <img style="height: 60px; width: 50px; border-radius: 0;" 
                            src="/product-image/<%= product.image[0]%>"
                            alt=""
                          />
                        </td>
                        <!-- <td>
                              <%=product.discription%>
                            </td> -->
                        <td><%=product.category%></td>

                        <td><%=product.price%></td>
                        <td><%=product.stock%></td>
                        <td><%=product.status%></td>
                       
                        <td>
                          <a
                            href="/admin/editproduct/<%=product._id%>"
                            class="btn btn-success"
                            >Edit</a
                          >
                        </td>
                        <td>
                          <button class="fa fa-trash"
                          onclick="deleteProduct('<%=product._id%>')"
                          style="
                            font-size: 20px;
                            color: rgb(235, 14, 14);
                            background-color: rgba(255, 255, 255, 0);
                            border: none  ;
                            
                            text-decoration: none;
                          ">

                          </button>
                          <!-- <a
                            href="/admin/deleteproduct/<%=product._id%>"
                            class="fa fa-trash"
                            
                            style="
                              font-size: 20px;
                              color: rgb(235, 14, 14);
                              text-decoration: none;
                            "
                          ></a> -->
                        </td>
                      </tr>
                      <%count++%> <% })%>
                    </tbody>
                  </table>
                  <% }else{%>
                      
                    <h5 class="font-weight-bold text-center  ">Product  Table is empty</h5>

                    <%}%>
                 
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

    

