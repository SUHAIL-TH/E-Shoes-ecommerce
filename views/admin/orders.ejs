<%- include("../partials/admin_header")%>
    <div class="container-scroller">
      <!-- partial:../../partials/_sidebar.html -->
      <%- include('../partials/admin_sidebar')%>
      </nav>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:../../partials/_navbar.html -->
        <%- include('../partials/admin_navbar')%>
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title">Orders</h3>
              
            </div>
            <div class="row">
              
              
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    
                   
                   
                    <div class="table-responsive" >
                      
                      <table class="table table-striped" id="user-table">
                        <thead>
                          <tr>
                            <th> No</th>
                            <th>Order Id</th>
                            <th>Date</th>
                            
                            <th>Amount</th>
                            <th>payment</th>
                            <th>status</th>
                            <th>Options</th>
                            <!-- <th>View</th> -->
                          </tr>
                        </thead>
                        <tbody>
                          <% let count=1%>
                         <%orderData.forEach((order)=>{%>

                          <tr >
                            <td><%=count%></td>
                            <td><%=order._id%></td>
                            <td><%=order.date.toISOString().substring(0,10)%></td>
                            
                      
                            <td><%=order.totalamount%></td>
                           
                         
                           <td><%=order.paymentMethode%></td>
                            <td><%if(order.status=="pending"){%>
                              <label class="text-danger font-weight-bold"><%=order.status%></label>
                            <%}else{%>
                              <label class="text-success font-weight-bold"><%=order.status%></label>

                            <%}%>
                            </td> 
                            <!-- <td><a href="/admin/statusupdate"  class="btn btn-info">Edit</a> -->
                              <!-- <td><button type="button" class="btn btn-info" data-toggle="modal" data-target="#exampleModalCenter">
                                Edit
                              </button> -->
                              </td>

                            </td>
                            <td><a href="/admin/orderdetails/<%=order._id%>"  class="btn btn-info">View</a>
                            </td>
                            
                          </tr>

                          
                          
                          
                          <%count++%>
                         <%})%>
                          
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
              
              
             
              
              
              
            </div>
          </div>
          
        </div>
  
      </div>
      
    </div>
    
  
    <%- include('../partials/admin_footer')%>