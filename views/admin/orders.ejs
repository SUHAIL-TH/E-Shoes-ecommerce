<%- include("../partials/admin_header")%>
    <div class="container-scroller">
      <!-- partial:../../partials/_sidebar.html -->
      <%- include('../partials/admin_sidebar')%>
      </nav>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:../../partials/_navbar.html -->
        <%- include('../partials/admin_navbar')%>
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title"> Users</h3>
              
            </div>
            <div class="row">
              
              
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    
                   
                   
                    <div class="table-responsive" >
                      <table class="table table-striped" id="user-table">
                        <thead>
                          <tr>
                            <th> No</th>
                            <th>Order Id</th>
                            <th>Date</th>
                            <th>Address</th>
                            <th>Amount</th>
                            <th>payment</th>
                            <th>status</th>
                            <th>Options</th>
                            <th>View</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% let count=1%>
                         <%orderData.forEach((order)=>{%>

                          <tr >
                            <td><%=count%></td>
                            <td><%=order._id%></td>
                            <td><%=order.date.toISOString().substring(0,10)%></td>
                            <td><button style="  border-color:rgb(38, 48, 141);border-width: 2px;" type="button" class="btn" data-toggle="modal" data-target="#exampleModalLong">
                                view
                              </button></td>
                      
                            <td><%=order.totalamount%></td>
                           
                         
                           <td><%=order.paymentMethode%></td>
                            <td><label class="text-success font-weight-bold"><%=order.status%></label></td>
                            <td><a href="/admin/unblockuser/"  class="btn btn-info">Edit</a>

                            </td>
                            <td>                                <a href="/admin/unblockuser/"  class="mdi mdi-eye"></a>
                            </td>
                            
                          </tr>
                          <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h5 class="modal-title" id="exampleModalLongTitle">Delivery address</h5>
                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                  </button>
                                </div>
                                <div class="modal-body">
                                  <%=order.deliveryDetails%>
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                  
                              </div>
                            </div>
                          </div>
                          <%count++%>
                         <%})%>
                          
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
              
              
              
            </div>
          </div>
          
        </div>
  
      </div>
      
    </div>
  
    <%- include('../partials/admin_footer')%>