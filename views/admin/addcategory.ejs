                          <%}%>
                       
                       
    
                      </div>
                      
                      <button type="submit" id="catform" class="btn btn-success mr-2">Submit</button>
                      <a href="/admin/viewcategory" class="btn btn-danger">Cancel</a>
                    </form>
                  </div>
                </div>
              </div>
          </div>
        
          
          
        </div>
