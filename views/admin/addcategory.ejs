                    <form class="forms-sample" id="catform" action="/admin/addcategory" method="post">
                      <div class="form-group">
                        <label for="exampleInputUsername1">Category Name</label>

                        <input type="text" class="form-control" id="catname" name="category" placeholder="Enter the category name" required>

                      </div> 
                      <div class="mt-2">
