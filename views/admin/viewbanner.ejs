<%- include("../partials/admin_header")%>
<div class="container-scroller">
  <!-- partial:../../partials/_sidebar.html -->
  <%- include('../partials/admin_sidebar')%>

  <!-- partial -->
  <div class="container-fluid page-body-wrapper">
    <!-- partial:../../partials/_navbar.html -->
    <%- include('../partials/admin_navbar')%>
    <!-- partial -->
    <div class="main-panel">
      <div class="content-wrapper">
        <div class="page-header">
          <h3 class="page-title">Users</h3>
        </div>
        <div class="row">
          <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <div class="table-responsive">
                  <%if(bannerData.length!=0){%>

                  <table class="table table-striped" id="user-table">
                    <thead>
                      <tr>
                        <!-- <th> No</th> -->
                        <th>No</th>
                        <th>Heading</th>
                        <th>Discription</th>
                        <th>Image</th>
                        <th>status</th>
                        <th>Options</th>
                      </tr>
                    </thead>
                    <tbody>
                      
                      <tr>
                        <td class="text-white"><%=count%></td>
                        <td class="text-white"><%=banner.heading%></td>
                        <td class="text-white"><%=banner.discription%></td>
                        <td class="text-white">
                          <img
                            src="/product-image/<%=banner.image%>"
                            alt="product image"
                            style="width: 60px; height: 70px; border-radius: 0"
                          />
                        </td>
                        <td class="text-white"><%=banner.status%></td>
                        <td class="text-white">
                          <%if(banner.status==true){%>
                          <button
                            onclick="bannerstatus('<%=banner._id%>','false')"
                            class="btn btn-danger"
                          >
                            Block
                          </button>

                          <%}else{%>
                          <button
                            class="btn btn-success"
                            onclick="bannerstatus('<%=banner._id%>','true')"
                          >
                            UnBlock
                          </button>

                          <%}%>
                        </td>
                      </tr>
                      <%count++%> <%})%>
                    </tbody>
                  </table>
             
                
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  function bannerstatus(id,text) {
   console.log(id);
    Swal.fire({
      title: "Are you sure?",
      text: "You won't be able to revert this!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Yes, delete it!",
    }).then((result) => {
      if (result.isConfirmed) {
        $.ajax({
          url: "/admin/updatebanner",
          method: "post",
          data: {
            id: id,
            text:text
          },
          success: (response) => {
            if (response.status) {
               location.reload()
            }
          },
        });
      }
    });
  }
</script>

<%- include('../partials/admin_footer')%>
