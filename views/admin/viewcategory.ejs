<%- include("../partials/admin_header")%>
    <div class="container-scroller">
      <!-- partial:../../partials/_sidebar.html -->
      <%- include('../partials/admin_sidebar')%>
   
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:../../partials/_navbar.html -->
        <%- include('../partials/admin_navbar')%>
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title">Category</h3>
              
            </div>
            <div class="row">
              
              
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    
                   
                   
                    <div class="table-responsive">
                      <table class="table table-striped" id="table-setting">
                        <thead>
                          <tr>
                            <th> No</th>
                            <th> CatogoryName</th>
                            <th>Status</th>
                            <th>Options</th>
                            <th>remove</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% let count=1%>
                          <% categoryData.forEach((category)=>{ %>

                          <tr>
                            <td><%=count%></td>
                            <td>
                              <%= category.categoryName%>

                            </td>
                           
                            
                           
                         
                           <td><%=category.status%></td>
    
                           
                           <td>
                            <%if(category.status==false){%>
                              <a href="/admin/truecategory/<%=category._id%>" class="btn btn-success">status</a>

                           <% }else{%>
                            <a href="/admin/falsecategory/<%=category._id%>" class="btn btn-danger">status</a>

                           <%}%>
                            
                          </td>
                           <td>
                            <button class="fa fa-trash "  onclick="deletecategory('<%=category._id%>')" style="font-size:20px;color:rgb(235, 14, 14) ; text-decoration: none; background-color: rgba(240, 248, 255, 0); border: none;" >

                            </button>
                          </td>
                           
                          </tr>
                          <%count++%>
                         <% })%>
                          
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
              
              
              
            </div>
          </div>
          
        </div>
  
      </div>
      
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      function deletecategory(id){
        Swal.fire({
  title: 'Are you sure?',
  text: "do you want to delete this category?",
  icon: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Yes, delete it!'
}).then((result) => {
  if (result.isConfirmed) {
   
    
      showConfirmButton: false,
      location.href=`/admin/deletecategory/${id}`
     
  
   
  }
})
      }

    </script>
  
    <%- include('../partials/admin_footer')%>