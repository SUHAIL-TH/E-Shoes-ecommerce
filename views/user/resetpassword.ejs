    <form action="/resetpassword" method="post">
        <div class="d-flex align-items-center mb-3 pb-1 ">
           
            <span class="h1 fw-bold mb-0"><span class="h1 text-uppercase text-white bg-dark px-2">E-</span>
            <span class="h1 text-uppercase text-dark bg-warning px-2 ml-n1">SHOES</span></span>
          </div>
        <h5>Reset password</h5>

        <label for="">New password</label>
        <input type="text" placeholder="Enter the new passsword " id="password" name="password" required>
        <label for="username">Confrim password</label>
        <input type="text" placeholder="confrim the new password" id="cpassword" name="cpassword" required>
        <input type="hidden" name="token" value="<%=token%>">
       
        
        


        

        <button type="submit">submit</button>
        <div class="mt-2">
            <% if(locals.Msg){%>
              <p class="text-danger font-weight-bold"><%=Msg%></p>
              <%}%>
           
           

          </div>
          <script>
            document.getElementById("password").addEventListener("input",function(){
          var password=document.getElementById("password").value.trim()
          
          if(password.length<5){
            document.getElementById("password").setCustomValidity("Password is less than 5")
          }else{
            document.getElementById("password").setCustomValidity("")
      
          }
        })
        document.getElementById("cpassword").addEventListener("input",function(){
          var cpassword=document.getElementById("cpassword").value.trim()
          var password=document.getElementById("password").value.trim()
          
          if(cpassword!=password){
            document.getElementById("cpassword").setCustomValidity("Password doden't match")
          }else{
            document.getElementById("cpassword").setCustomValidity("")
      
          }
        })
          </script>
