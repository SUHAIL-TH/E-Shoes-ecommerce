<script>
  function cancelorder(id) {
    Swal.fire({
      title: "Are you sure?",
      text: "You won't be able to revert this!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Yes, delete it!",
    }).then((result) => {
      if (result.isConfirmed) {
        $.ajax({
          url: "/cancelorder",
          method: "post",
          data: {
            id: id,
          },
          success: (response) => {
            if (response.status) {
              window.location.reload();
            }
          },
        });
      }
    });
  }

  function returnorder(id) {
    Swal.fire({
      title: "Are you sure?",
      text: "You want to return !",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Yes, delete it!",
    }).then((result) => {
      if (result.isConfirmed) {
        $.ajax({
          url: "/returnorder",
          method: "post",
          data: {
            id: id,
          },
          success: (response) => {
            if (response.status) {
              window.location.reload();
            }
          },
        });
      }
    });
  }
</script>

